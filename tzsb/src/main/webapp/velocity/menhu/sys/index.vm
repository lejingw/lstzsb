				function login_spacerank_ck(_idx) {
					login_spacerank_list[login_spacerank_index].className = login_spacerank_class;
					login_spacerank_list[_idx].className = login_spacerank_class
							+ ' cur wid';
					document.getElementById('login_spacerank_'
